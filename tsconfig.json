{
  "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "lib": ["esnext", "dom"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "rootDir": ".",
      "baseUrl": ".",
      "jsx": "react",
      "paths": {
        "*": [
          "node_modules/*",
        ]
      }
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "viewer.webpack.config.js",
  ],
  "exclude": [
    "node_modules",
    "src/replayer/gcode-rs274"
  ]
}